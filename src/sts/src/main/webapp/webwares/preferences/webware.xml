<?xml version="1.0" encoding="UTF-8"?>
<webware>
    <!-- ==================================================================== -->
	<!-- meta：网件元信息  ==================================================== -->
    <!-- ==================================================================== -->
	<!--
	  + 网件标识：
	  + * ID 必须是唯一的，不能与其他网件相同；
	  + * ID 采用数字，兼容 Spring Security。
	  -->
    <id></id>
	<!--
	  + 网件名称：
	  + * name 必须是唯一的，不能与其他网件相同；
	  + * name 必须与网件的文件夹名相同。
	  -->
	<name>preferences</name>
	<title>偏好设置</title>
	<author>JWebtop.org</author>
	<release>2009-05-26</release>
	<!--
	  + 模块截图：128 * 128 像素。 
	  -->
	<screen>preferences-screen.png</screen>
	<!--
	  + 模块LOGO: 48 * 48 像素 
	  -->
	<logo>preferences-48.png</logo>
	<!--
	  + 模块图标: 16 * 16 像素 
	  -->
	<icon>preferences-16.png</icon>
	<description>
		<![CDATA[
			用于设置个人虚拟桌面的使用偏好，如背景、颜色、快捷方式、快速启动和其他设置。
		]]>
	</description>
	
    <!-- ==================================================================== -->
	<!-- versioning：版本控制 ================================================ -->
    <!-- ==================================================================== -->
	<!--
	  + 网件支持的版本号：
	  + * 多个版本以英文半角“,”分隔；
	  + * 老用户可以选择比当前使用版本更高的版本号（升级）；
	  + * 不允许从高版本降低到低版本。
	  -->
	<versions>1.0.0</versions>
	<!--
	  + 最新版本号：
	  + * 新用户只能选择最新版本号。
	  -->
	<currentVersion>1.0.0</currentVersion>
	
    <!-- ==================================================================== -->
	<!-- management ========================================================= -->
    <!-- ==================================================================== -->
	<!-- 
	  + 状态：
	  + 0 = disabled(default) 未启用；
	  + 1 = enabled 已启用。
	  -->
	<status>1</status>
	
    <!-- ==================================================================== -->
	<!-- CSS 样式表 ========================================================== -->
    <!-- ==================================================================== -->
    <styles>
    	<style>preferences.css</style>
    	<style>shortcuts.css</style>
    	<style>autorun.css</style>
    	<style>quickstart.css</style>
    	<style>appearance.css</style>
    	<style>webwares2.css</style>
    </styles>
	
    <!-- ==================================================================== -->
	<!-- javascript ========================================================= -->
    <!-- ==================================================================== -->
	<!-- 
	  + 脚本源码：
	  + 开发时使用；
	  + 按照依赖关系排列。
	  -->
	<jsSources>
		<source>Shortcuts.js</source>
		<source>Autorun.js</source>
		<source>QuickStart.js</source>
		<source>Appearance.js</source>
		<source>Webwares2.js</source>
		<source>Preferences.js</source>
	</jsSources>
	<!--
	  + 压缩脚本文件：
	  + 生产环境时使用。
	  -->
	<jsCompress>null</jsCompress>
	<jsClass>JW.PreferencesWindow</jsClass>
	
    <!-- ==================================================================== -->
	<!-- spring 配置文件路径  ================================================= -->
    <!-- ==================================================================== -->
	<springContext>org/jwebtop/webwares/applicationContext.xml</springContext>
	
    <!-- ==================================================================== -->
	<!-- 访问权限 ============================================================ -->
    <!-- ==================================================================== -->
    <!--
      + ROLE_GUEST - 任意角色均可以访问
      + ROLE_USER - 用户，必须登录
      + ROLE_ADMIN - 管理员
      + * => ROLE_USER,ROLE_GUEST,ROLE_ADMIN
      + 空白为不定义
      -->
	<acl>
		<read>*</read>
		<write></write>
		<create></create>
		<delete>ROLE_ADMIN</delete>
		<admin>ROLE_ADMIN</admin>
	</acl>
</webware>